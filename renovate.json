{
  "extends": [
    "github>defenseunicorns/uds-common//config/renovate.json5",
    ":semanticCommits",
    ":semanticPrefixFixDepsChoreOthers",
    "replacements:all",
    "workarounds:all"
  ],
  "branchConcurrentLimit": 0,
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "packageRules": [
    {
      "matchFileNames": [
        ".github/workflows/**",
        ".github/actions/**",
        "tasks.yaml"
      ],
      "groupName": "support-deps",
      "commitMessageTopic": "support-deps"
    },
    {
      "matchFileNames": [
        "chart/**",
        "**/zarf.yaml",
        "values/*.yaml",
        "tasks.yaml"
      ],
      "groupName": "dev-stack",
      "commitMessageTopic": "dev-stack",
      "matchPackageNames": [
        "!ghcr.io/k3s-io/k3s",
        "!defenseunicorns/uds-common"
      ]
    }
  ]
}
