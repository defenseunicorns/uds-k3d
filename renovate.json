{
  "extends": [
    "github>defenseunicorns/uds-common//config/renovate.json5",
    ":semanticCommits",
    ":semanticPrefixFixDepsChoreOthers",
    "replacements:all",
    "workarounds:all"
  ],
  "packageRules": [
    {
      "matchFileNames": [
        "chart/**",
        "zarf.yaml"
      ],
      "groupName": "dev-stack",
      "commitMessageTopic": "dev-stack",
      "matchPackageNames": [
        "!rancher/k3s"
      ]
    },
    {
      "matchFileNames": [
        ".github/workflows/**",
        ".github/actions/**"
      ],
      "groupName": "githubactions",
      "commitMessageTopic": "githubactions"
    }
  ]
}
